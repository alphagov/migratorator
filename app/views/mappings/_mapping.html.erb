<tr id="mapping_<%= mapping.id %>">
  <td><%= truncate normalize_title(mapping.title), :length => 70 %></td>
  <td>
    <% mapping.tags.each do |t| %>
      <%= content_tag :span, t.whole_tag, :class => (t.group == 'status' ? 'label label-important' : 'label') %>
    <% end %>
  </td>
  <td><%= mapping.status %></td>
  <td><%= link_to "JSON", find_mapping_path(mapping) %>&nbsp;&bull;&nbsp;<%= link_to "Edit", edit_mapping_path(mapping) %></td>
</tr>