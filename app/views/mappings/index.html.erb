<div class="row">
  <div class="span8">
    <h1>List of mappings</h1>
  </div>
  <div class="span4" style="text-align: right">
    <%= link_to "Open in browser", browser_path(active_tags.join('/')), :class => 'btn btn-info' %>
    <%= link_to "Add a new mapping", new_mapping_path, :class => 'btn' %>
  </div>
</div>

<%= render :partial => "selected_filter" %>

<div class="row">
  <div class="span3">
    <%= render :partial => "tag_list" %>
  </div>
  <div class="span9">

    <%= render :partial => 'progress_bar' %>

    <%= paginate @mappings %>

    <table class="table table-striped mappings-table table-bordered">
      <thead>
        <tr>
          <th style="width: 64%">Title</th>
          <th style="width: 17%">Status</th>
          <th style="width: 15%">Destination</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => "mapping", :collection => @mappings %>
      </tbody>
    </table>

    <%= paginate @mappings %>

  </div>
</div>